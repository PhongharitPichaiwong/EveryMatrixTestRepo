    "version": "0.2.0",
    "configurations": [
        {
            "name": "flutter_monorepo_app",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "demo_app (development mode)",
            "cwd": "apps/demo_app",
            "request": "launch",
            "type": "dart",
            "program": "lib/main_development.dart",
        },
        {
            "name": "demo_app (staging mode)",
            "cwd": "apps/demo_app",
            "request": "launch",
            "type": "dart",
            "program": "lib/main_staging.dart",
        },
        {
            "name": "demo_app (release mode)",
            "cwd": "apps/demo_app",
            "request": "launch",
            "type": "dart",
            "program": "lib/main_production.dart",
            "flutterMode": "release"
        },
        {
            "name": "demo_app (profile mode)",
            "cwd": "apps/demo_app",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "ui",
            "cwd": "packages/ui",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "ui (profile mode)",
            "cwd": "packages/ui",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "ui (release mode)",
            "cwd": "packages/ui",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        },
        {
            "name": "utilities",
            "cwd": "packages/utilities",
            "request": "launch",
            "type": "dart"
        }
    ]
}